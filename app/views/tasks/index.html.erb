<h1>Tasks</h1>
<%= link_to "New task", new_task_path, class: "button" %>
<ol>
    <% @tasks.each do |task| %>
      <li>
        <%= task.title %> - <%= link_to "Edit", edit_task_path(task) %> |
        <%= link_to "Delete", task, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </li>
    <% end %>
</ol>